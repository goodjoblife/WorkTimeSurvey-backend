{
    "env": {
        "es6": true,
        "node": true,
        "mocha": true
    },
    "extends": ["prettier", "eslint:recommended"],
    "plugins": ["prettier"],
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "no-underscore-dangle": "off",
        "no-console": "warn",
        "camelcase": "off",
        "arrow-parens": "off",
        "prefer-arrow-callback": "off",
        "no-restricted-syntax": "off",
        "no-loop-func": "off",
        "consistent-return": [
            0, {
                "treatUndefinedAsUnspecified": true
            }
        ],
        "prettier/prettier": [
            "error", {
                "tabWidth": 4,
                "trailingComma": "es5"
            }
        ]
    }
}
